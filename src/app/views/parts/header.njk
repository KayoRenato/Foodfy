{% macro render(classes) %}
  <div class="header {{classes}}">
    <header>
      <a href="/" class='logo'>
        <img 
          {% if classes == 'public' %}
            src="/images/logoBlack.png"
          {% else %}
            src="/images/logoWhite.png"
          {% endif %}
            alt=""
        >
      </a>

      <nav class="menu">
        {{caller()}}
      </nav>

    <div class="search">
      <form action="/recipes/search" method="get">
        <i class="fas fa-search fa-sm"></i>
        <input 
          type="text"
          name="filter"
          placeholder="Buscar uma receita"  
        >
        <button class="button" type="submit">Buscar</button>
      </form>
    </div>
  
    </header>
  </div>

{% endmacro %}






