{% extends "layout.njk" %}

{% import "parts/header.njk" as header %} 

  {% block head %}
    <title>FoodFy - {{item.title}} </title>
  {% endblock %}

  {% block header %}
    {% call header.render(register) %}
      <a href="/">HOME</a>
      <a href="/recipes">RECEITAS</a>
      <a href="/about">SOBRE</a>
    {% endcall %}
  {% endblock %}

  {% block main %}

    <div class="recipe">

      <div class="head">
        <div 
          class="image"
          style="background-image: url({{item.image}})"
        ></div>
        <h2>{{item.title}}</h2>
        <p class='author'>por {{item.author}}</p>
      </div>

      <div class="content">
        <div class="ingre">
          <h3>Ingredientes - <a class="ingre">Mostrar</a></h3>
            <ul class="hide">
              {% for ing in item.ingredients %}
              <li>{{ing}}</li>
              {% endfor %}
            </ul>
        </div>

        <div class="prep">
          <h3>Preparo - <a class="prep">Mostrar</a></h3>
          <ol class="hide">
          {% for prep in item.preparation %}
            <li>{{prep}}</li>
            {% endfor %}
          </ol>
        </div>

        {% if item.information %}
          <div class="info">
            <h3>Informações Adicionais - <a class="info">Mostrar</a></h3>
            <p class="hide">{{item.information}}</p>
          </div>
        {% endif %}
        
      </div>  

      <script src="/utils/scriptShow.js"></script>
    </div>  

  {% endblock %}