{% extends "parts/layout.njk" %}

{% import "parts/header.njk" as header %}

{% block header %}
  {% call header.render(register) %}
    <a href="/user/recipes">RECEITAS</a>
    <a href="chefs">CHEFS</a>
    <a href="users">USU√ÅRIOS</a>
  {% endcall %}
{% endblock %}

{% block main %}
  <main>
   <div class="button-list">
      <h2>Gerenciar Chefs</h2>
      <a href="chefs/create" class="button add">Novo Chef</a>
    </div>
    <div class="chefs list">
      {%for chef in chefs %}
        <div class="card">
          <div 
            class="image"
            style="background-image: url({{chef.avatar_url}})"
          ></div>

          <div class="info">
            <h3>{{chef.name}}</h3>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>                   
          </div>
        </div>
      {% endfor %}
     </div>
  </main>

{% endblock %}
