{% extends "parts/layout.njk" %}

{% import "parts/header.njk" as header %} 
{% import "parts/card.njk" as card %} 

  {% block head %}
    <title>FoodFy</title>
  {% endblock %}

  {% block header %}
    {% call header.render(register) %}
      <a href="/user/recipes">RECEITAS</a>
      <a href="/admin/chefs">CHEFS</a>  
      <a href="/admin/users">USUÁRIOS</a>  
    {% endcall %}
  {% endblock %}

  {% block main %}
      {% call card.render('Editando Usuário', 'user-edit' ) %}

        <form action="/admin/users?_method=DELETE" method="post" name="form1">

          <input type="hidden" name="id" value="{{user.id}}">

        </form>
    
        <form action="/admin/users?_method=PUT" method="post" name="form2">
    
          <input type="hidden" name="id" value="{{user.id}}">

          {% include "admin/user-fields.njk" %}

        </form>
      {% endcall %}
  {% endblock %}